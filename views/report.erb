<html>
	<head>
		<title>SEO Analyzer Results</title>
		<link type="text/css" href="/the.css" rel="stylesheet" media="screen"></style>
	</head>
	<body>
	  <div class="container">
	    <h2 class="logo">SEO Analyzer</h2>
		  <div class="title-wrap">
		    <h1>Results for <span class="url"><%= params[:url] %></span></h1>
		    <div class="clear"></div>
		  </div>
  		<ul>
  		<% @report.groups.each do |group| %>
  			<li class="group">
  				<h2><span><%= group.title %></span></h2>
  				<ul>
  				<% group.rules.each do |rule| %>
  					<li class="guideline rule <%= rule.result.to_s %>">
  						<span class="title"><%= rule.title %></span>
  						<% rule.explanations.each do |explanation| %>
  						  <p class="<% if explanation == rule.explanations.last %>last<% end %>">
  						    <%= explanation.text %>
  						  </p>
  						<% end %>
  					</li>
  				<% end %>			
  				<% group.recommendations.each do |recommendation| %>
  					<li class="guideline recommendation <%= recommendation.result.to_s %>">
  						<span class="title"><%= recommendation.title %></span>
  						<% recommendation.explanations.each do |explanation| %>
  						  <p class="<% if explanation == recommendation.explanations.last %>last<% end %>">
  						    <%= explanation.text %>
  						  </p>
  						<% end %>
  					</li>
  				<% end %>		
  				</ul>
  			</li>
  		<% end %>
  		</ul>
		<div>
	</body>
</html>
